<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Title>Iciclecreek Bot Templates</Title>
    <Authors>Tom Laird-McConnell</Authors>
    <Company>Iciclecreek</Company>
    <Authors>Tom Laird-McConnell</Authors>
    <PackageType>Template</PackageType>
    <PackageVersion>2.0.2</PackageVersion>
    <PackageId>Iciclecreek.Bot.Templates</PackageId>
    <PackageIconUrl>https://raw.githubusercontent.com/tomlm/iciclecreek.bot/master/icon.png</PackageIconUrl>
    <PackageIcon>icon.png</PackageIcon>
    <PackageProjectUrl>https://github.com/tomlm/iciclecreek.bot/tree/master/source/Templates</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
    <Company>Iciclecreek</Company>
    <Description>Templates for creating bot assets.</Description>
    <PackageTags>dotnet-new;templates;bot</PackageTags>
    <TargetFramework>netstandard2.1</TargetFramework>

    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>content</ContentTargetFolders>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Templates\**\*" Exclude="Templates\**\bin\**;templates\**\obj\**" />
    <Compile Remove="**\*" />
  </ItemGroup>


  <ItemGroup>
    <None Include="icon.png" Pack="true" PackagePath="" />
    <None Include="readme.md" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>